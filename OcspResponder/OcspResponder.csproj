<Project Sdk="Microsoft.NET.Sdk.Web">
  <Import Project="..\shared\Minimal.props" />

  <PropertyGroup>
    <TargetFramework>$(NewApplicationTargetFramework)</TargetFramework>
    <AssemblyName>ocsp-responder</AssemblyName>
    <Version>0.1.9</Version>
    <Nullable>enable</Nullable>
    <NoWarn>$(NoWarn);CA2007</NoWarn>
    <DefineConstants Condition="$(MinimalBuild) == true">$(DefineConstants);MINIMAL_BUILD</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="OcspResponder.AspNetCore" Version="1.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Systemd" Version="3.1.6" Condition="$(MinimalBuild) != true" />
    <PackageReference Include="Microsoft.AspNetCore.Server.Kestrel.Transport.Libuv" Version="3.1.6" Condition="$(MinimalBuild) != true" />
    <PackageReference Include="Tmds.Systemd.Logging" Version="0.7.0" Condition="$(MinimalBuild) != true" />
  </ItemGroup>
</Project>
